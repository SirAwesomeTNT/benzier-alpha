import numpy as np
import matplotlib.pyplot as plt
from matplotlib.widgets import Slider, Cursor

# Function to update the plot based on control points
def update(val):
    # Get the current slider values
    control_x = slider_x.val
    control_y = slider_y.val

    # Update the Bézier curve
    bezier_curve.set_ydata(control_y * (control_x ** 3))

    # Redraw the plot
    plt.draw()

# Create a simple Bézier curve with one control point
x = np.linspace(0, 1, 100)
y = x ** 3

fig, ax = plt.subplots()
plt.subplots_adjust(bottom=0.25)

# Plot the Bézier curve
bezier_curve, = ax.plot(x, y, label='Bézier Curve')

# Add sliders for control points
axcolor = 'lightgoldenrodyellow'
ax_slider_x = plt.axes([0.1, 0.01, 0.65, 0.03], facecolor=axcolor)
ax_slider_y = plt.axes([0.1, 0.06, 0.65, 0.03], facecolor=axcolor)

slider_x = Slider(ax_slider_x, 'Control X', 0.1, 1.0)
slider_y = Slider(ax_slider_y, 'Control Y', 0.1, 1.0)

# Add an update function to sliders
slider_x.on_changed(update)
slider_y.on_changed(update)

plt.show()
